<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_card">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/questionTextField"
        android:layout_margin="20dp"
        android:hint="Enter the question here!"
        android:inputType="textMultiLine"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/answerTextField"
        android:layout_margin="20dp"
        android:hint="Enter the answer here!"
        android:layout_below="@id/questionTextField"
        android:inputType="textMultiLine"/>

    <ImageView
        android:id="@+id/cancel_add_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/save_add_card"
        android:layout_marginEnd="28dp"
        android:src="@drawable/ic_cancel_black_24dp" />

    <ImageView
        android:id="@+id/save_add_card"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/questionTextField"
        android:layout_marginTop="228dp"
        android:src="@drawable/ic_save_black_24dp" />
</RelativeLayout>
